<Page x:Class="ELL.Desktop.UI.Views.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ELL.Desktop.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Welcome Page" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding PathList}" SelectedItem="{Binding SelectedPath}"
                  HorizontalAlignment="Center" MinWidth="150"
                  VerticalAlignment="Center" MinHeight="30"
                  Grid.Row="1"/>
        <Button Content="Choose" Grid.Row="2" 
                Command="{Binding ChoosePathCommand}"
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
